#!/usr/bin/env ruby

preprocess do
  system "rsync -gprt --partial public/ output"
  create_tag_pages
  create_date_pages
end

compile '/css/*' do
  filter :sass, {
    :load_paths => [Dir.pwd + "/content/css"],
    :full_exception => true,
    :line_numbers => true
  }
end

compile %r[/posts/\d{4}(/\d{2})?/$] do
  rep.filter :haml
  rep.layout 'home'
end

compile '/posts/*' do
  rep.filter :erb
  rep.filter :rdiscount
  rep.layout 'post'
end

compile '*' do
  filter_map = {
    '.erb' => :erb,
    '.haml' => :haml,
    '.md' => :rdiscount,
    '.markdown' => :rdiscount,
    nil => :haml
  }

  file_filter = filter_map[item.extension]
  raise "Filter is not configured for file extension #{item.extension} in Rules file." if file_filter.nil?

  filter file_filter
  layout 'home' unless item[:layout] == "none"
end

route '/feeds/*' do
  "/feeds/" + item.name + ".xml"
end

route '/css/*' do
  item.identifier.gsub(/\/$/, '') + '.css'
end

route '*' do
  item.identifier + 'index.html'
end

layout '*', :haml
