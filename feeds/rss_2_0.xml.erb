-----
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
     xmlns:content="http://purl.org/rss/1.0/modules/content/"
     xmlns:wfw="http://wellformedweb.org/CommentAPI/"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
     xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
     >

  <channel>
    <title>posts @ alexvollmer.com</title>
    <atom:link href="http://alexvollmer.com/feeds/atom/" rel="self" type="application/rss+xml" />
    <link>http://alexvollmer.com</link>
    <description>Optimistic reflections based on hard-won pessimism</description>
    <lastBuildDate><%= format_rfc822_date(articles.first.created_at) %></lastBuildDate>
    <generator>http://wordpress.org/?v=2.9.1</generator>
    <language>en</language>
    <sy:updatePeriod>hourly</sy:updatePeriod>
    <sy:updateFrequency>1</sy:updateFrequency>
<% articles.reverse[0..5].each do |post| %>
    <item>
      <title><%= post.title %></title>
      <link>http://alexvollmer.com/<%= post.full_path %>/</link>
      <!-- <comments>http://alexvollmer.com/index.php/2010/01/10/prototyping-with-briefs/#comments</comments> -->
      <pubDate><%= format_rfc822_date(post.created_at) %></pubDate>
      <dc:creator>alex</dc:creator>
<% post.tags.each do |tag| %>
      <category><![CDATA[<%= tag %>]]></category>
<% end %>

      <guid isPermaLink="false">http://alexvollmer.com/<%= post.full_path %>/</guid>
      <description><![CDATA[<%= include_post_summary(post) %>]]></description>
      <content:encoded><![CDATA[<%= include_post_body(post) %>]]></content:encoded>
      <!-- <wfw:commentRss>http://alexvollmer.com/<%= post.full_path %>/feed/</wfw:commentRss> -->
      <slash:comments>1</slash:comments>
    </item>
<% end %>
  </channel>
</rss>
